<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.System.background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <Button
        android:id="@+id/button4"
        style="@style/Theme.Map.button"
        android:layout_width="370dp"
        android:layout_height="160dp"
        android:layout_marginTop="60dp"
        android:text="@string/map"
        app:backgroundTint="#5321c1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button5"
        style="@style/Theme.Itinerary.button"
        android:layout_width="370dp"
        android:layout_height="160dp"
        android:layout_marginTop="60dp"
        android:onClick="itinerary"
        android:text="@string/itinerary"
        app:backgroundTint="#e44513"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button6"
        style="@style/Theme.Buddy.button"
        android:layout_width="370dp"
        android:layout_height="160dp"
        android:layout_marginTop="60dp"
        android:text="Buddy"
        app:backgroundTint="#007848"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

</androidx.constraintlayout.widget.ConstraintLayout>