<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="eventDetails"
        android:padding="3dp"
        style="@style/Theme.Map.toolbar">

        <TextView
            android:id="@+id/ven_title"
            style="@style/Theme.Map.textbackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/ven_start"
            android:gravity="left"
            android:text="Developing Developments"
            android:textSize="18sp"
            android:background="@drawable/card_borders"/>

        <TextView
            android:id="@+id/ven_start"
            style="@style/Theme.Map.textbackground"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/ven_end"
            android:gravity="center"
            android:text="23:00"
            android:textSize="18sp"
            android:background="@drawable/card_borders_start"/>

        <TextView
            android:id="@+id/ven_end"
            style="@style/Theme.Map.textbackground"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="23:59"
            android:textSize="18sp"
            android:background="@drawable/card_borders_end"/>

        <TextView
            android:id="@+id/ven_loc"
            style="@style/Theme.Map.textbackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ven_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:gravity="left"
            android:text="Hall H"
            android:textSize="14sp"
            android:background="@drawable/card_borders"/>

        <TextView
            android:id="@+id/ven_desc"
            style="@style/Theme.Map.textbackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ven_loc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:gravity="left"
            android:text="Description"
            android:textSize="14sp"
            android:background="@drawable/card_borders"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>