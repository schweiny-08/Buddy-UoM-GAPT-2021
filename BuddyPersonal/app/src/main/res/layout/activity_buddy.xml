<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.System.background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buddy">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/conversation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/userInput"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/userInput"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/bg_edit_text"
        android:hint="Ask Buddy"
        android:imeActionId="4"
        android:imeOptions="actionSend"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/voiceBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/EnterBtn"
        android:layout_marginStart="-350dp"
        android:layout_marginLeft="-350dp"
        android:layout_marginBottom="0dp"
        android:layout_toRightOf="@+id/userInput"
        android:background="@color/design_default_color_background"
        android:src="@drawable/ic_mic" />

    <ImageButton
        android:id="@+id/EnterBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/userInput"
        android:layout_marginStart="-5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="-3dp"
        android:layout_toRightOf="@+id/userInput"
        android:background="@color/design_default_color_background"
        android:src="@android:drawable/ic_media_play" />

</RelativeLayout>